<!-- res/layout/color_picker_dialog.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.AppCompat.Light"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="#7a7777"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="36dp"
        android:textColor="@color/gray"
        android:layout_margin="7sp"
        android:text="Choose a color:" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4">
                <Button
                    android:id="@+id/color_red"
                    android:layout_width="76dp"
                    android:layout_height="78dp"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:background="@color/red" />

                <Button
                    android:id="@+id/color_green"
                    android:layout_width="76dp"
                    android:layout_height="78dp"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:background="@color/green" />

                <Button
                    android:id="@+id/color_blue"
                    android:layout_width="76dp"
                    android:layout_height="78dp"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:background="@color/blue" />

                <Button
                    android:id="@+id/color_yellow"
                    android:layout_width="76dp"
                    android:layout_height="78dp"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:background="@color/yellow" />
         </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4">
            <Button
                android:id="@+id/color_orange"
                android:layout_width="76dp"
                android:layout_height="78dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@color/orange" />

            <Button
                android:id="@+id/color_lime"
                android:layout_width="76dp"
                android:layout_height="78dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@color/lime" />

            <Button
                android:id="@+id/color_aqua"
                android:layout_width="76dp"
                android:layout_height="78dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@color/aqua" />

            <Button
                android:id="@+id/color_purple"
                android:layout_width="76dp"
                android:layout_height="78dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@color/purple" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4">
            <Button
                android:id="@+id/color_white"
                android:layout_width="76dp"
                android:layout_height="78dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@color/white" />

            <Button
                android:id="@+id/color_lightGray"
                android:layout_width="76dp"
                android:layout_height="78dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@color/lightGray" />

            <Button
                android:id="@+id/color_gray"
                android:layout_width="76dp"
                android:layout_height="78dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@color/gray" />

            <Button
                android:id="@+id/color_black"
                android:layout_width="76dp"
                android:layout_height="78dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@color/black" />
        </TableRow>
    </TableLayout>

</LinearLayout>