<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar" />
    <style name="AppThemeBaseDark" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme" parent="AppThemeBase">
        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryDark">#991B1E</item>
        <item name="colorAccent">#F00</item>
        <item name="android:statusBarColor">#F00</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:color">@android:color/black</item>
        <item name="android:colorForeground">@android:color/black</item>
        <item name="android:switchTextAppearance">@android:color/black</item>
        <item name="android:textColorHighlight">#888</item>
    </style>
    <style name="AppThemeDark" parent="AppThemeBaseDark">
        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryDark">#991B1E</item>
        <item name="colorAccent">#F00</item>
        <item name="android:statusBarColor">#F00</item>
        <item name="android:windowBackground">@color/colorDarkBackground</item>
        <item name="android:colorBackground">@color/colorDarkBackground</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:color">@android:color/white</item>
        <item name="android:colorForeground">@android:color/white</item>
        <item name="android:switchTextAppearance">@android:color/white</item>
        <item name="android:textColorHighlight">#888</item>
        <item name="android:spinnerDropDownItemStyle">@android:color/white</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryDark">#991B1E</item>
        <item name="colorAccent">#F00</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="AppActionBar" parent="AppThemeBase">
        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryDark">#991B1E</item>
        <item name="colorAccent">#F00</item>
    </style>
    <style name="SectionBox">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_weight">0</item>
        <item name="android:background">#990000</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="SectionBoxLabel">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_weight">0</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>