<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@id/relative_ab_container" >
            <PropertySet android:visibility="visible" />
            <Layout
                android:layout_width="80dp"
                android:layout_height="160dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/relative_bottom" />
        </Constraint>
        <Constraint android:id="@id/aLineButton" >
            <Layout

                android:layout_alignParentRight="true" />

        </Constraint>
        <Constraint android:id="@id/bLineButton" >
            <Layout

                android:layout_alignParentRight="true"
                android:layout_below="@id/aLineButton" />

        </Constraint>
        <Constraint android:id="@id/abLinePlusButton" >
            <PropertySet android:visibility="gone" />
            <Layout
                android:layout_height="0dp"/>

        </Constraint>
        <Constraint android:id="@id/abLineMinusButton" >
            <PropertySet android:visibility="gone" />
            <Layout
                android:layout_height="0dp" />

        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@id/relative_ab_container" >
            <PropertySet android:visibility="visible" />
            <Layout
                android:layout_width="180dp"
                android:layout_height="300dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/relative_bottom" />
        </Constraint>
        <Constraint android:id="@id/abLinePlusButton" >
            <PropertySet android:visibility="visible" />
            <Layout
                android:layout_height="wrap_content" />

        </Constraint>
        <Constraint android:id="@id/aLineButton" >
            <Layout

                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="false"/>

        </Constraint>
        <Constraint android:id="@id/bLineButton" >
            <Layout


                android:layout_alignParentTop="true"
                android:layout_below="@id/relative_ab_container"
                app:layout_constraintTop_toTopOf="parent"/>

        </Constraint>
        <Constraint android:id="@id/abLineMinusButton" >
            <PropertySet android:visibility="visible" />
            <Layout
                android:layout_height="wrap_content" />

        </Constraint>

    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"  app:duration="400">
        <OnClick app:targetId="@id/abLineDrawerHandle" app:clickAction="toggle" />
    </Transition>
</MotionScene>
